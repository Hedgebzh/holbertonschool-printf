#include "main.h" /* include all necessary libraries. */

int _printf(const char *format, ...)

{


	int index_f;
	int str_f;

	va_list (args);
	va_start (args, format);

	/* première boucle for pour parcourir format, format étant l'argument 1 après la commande _printf dans le main.c
	* [index_f] permet de parcourir la string stocké dans format. format[0] = C, format [1] = h ...
	*/

	for(index_f = 0; format[index_f] != '\0'; index_f++)
	{
		if (format[index_f] != '%')
		/* Si format[index_f] ne correspond pas à %, imprimer l'index --> format[0] puis format [1] ... */
		{
			str_f += _put_char (format[index_f]);
			/* on copie la string stockée dans format dans une nouvelle variable str_. L'opérateur += permet de conserver
			* la valeur initiale de str + y ajouter la nouvelle instruction
			* str = ali
			* str += _put_char('x') --> str = str (donc ali) + 'x'
			* str = alix
			*/
		}

		else if (format[index_f + 1] == 'c')
		{
			str_f += _print_char(args);
			index_f++;
		}
	}
	va_end (args);
	return (str_f);

}
